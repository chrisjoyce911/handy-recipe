    "phase": [
        {
            "name": "Marinade",
            "ingredients": [
                {
                    "quanty": "600gm",
                    "ingredient": "Boneless skinless chicken thighs"
                },
                {
                    "quanty": "1 1/2 cups",
                    "ingredient": "sweet chili sauce"
                },
                {
                    "quanty": "3 tablespoons",
                    "ingredient": "soy sauce"
                },
                {
                    "quanty": "2 tablespoons",
                    "ingredient": "lemon juice"
                },
                {
                    "quanty": "1 tablespoons",
                    "ingredient": "garlic chili sauce"
                },
                {
                    "quanty": "1 tablespoons",
                    "ingredient": "vegetable oil"
                },
                {
                    "quanty": "2 tablespoons",
                    "ingredient": "Sriracha sauce"
                }
            ]
        },
        {
            "name": "Main",
            "ingredients": [
                {
                    "quanty": "14",
                    "ingredient": "bamboo skewers (6 inch)"
                },
                {
                    "quanty": "1/4 cup",
                    "ingredient": "chopped fresh cilantro leaves, if desired"
                }
            ]
        }
    ],
    "method": [
        {
            "order": 1,
            "description": "Soak bamboo skewers in water 30 minutes"
        },
        {
            "order": 2,
            "description": "cut chicken into 14 (1/2-inch) strips."
        },
        {
            "order": 3,
            "description": "In resealable food-storage plastic bag, mix 1/4 cup of the sweet chili sauce and the remaining ingredients except garnish. Add chicken to bag; seal bag and turn to coat chicken with marinade. Refrigerate 30 minutes."
        },
        {
            "order": 4,
            "description": "Remove chicken from marinade; discard marinade. Thread chicken on skewers."
        },
        {
            "order": 5,
            "description": "Cover grill; cook 10 minutes, turning once, until chicken is no longer pink in center."
        },
        {
            "order": 6,
            "description": "Serve with remaining sweet chili sauce. Garnish with cilantro."
        }
    ],
